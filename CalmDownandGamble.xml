<Ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="http://www.blizzard.com/wow/ui/">
	<Script file="CalmDownandGamble.lua" />
	<Animation />
	<Frame name="CDG_Frame" parent="UIParent" toplevel="true" movable="true" enableMouse="true">
		<Size>
			<AbsDimension x="320" y="150" />
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT" relativeTo="UIParent" />
		</Anchors>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="11" right="12" top="12" bottom="11" />
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32" />
			</TileSize>
			<EdgeSize>
				<AbsValue val="32" />
			</EdgeSize>
		</Backdrop>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="Calm Down Gambling" inherits="GameFontNormal" text="Calm Down Gambling">
					<Size x="298" y="19" />
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset x="11" y="-15" />
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="version" inherits="GameFontNormal" text="|cffff3f3f(1.0 version)">
					<Size x="299" y="18" />
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset x="10" y="-32" />
						</Anchor>
					</Anchors>
				</FontString>
				<FontString inherits="GameFontNormal" text="CalmDown@Magtheridon">
					<Size x="122" y="13" />
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset x="98" y="-129" />
						</Anchor>
					</Anchors>
					<FontHeight val="5" />
					<Color r="0.753" g="0.753" b="0.753" />
				</FontString>
			</Layer>
		</Layers>
		
		<Frames>
			<Button name="CDG_Close" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT" relativeTo="CDG_Frame" relativePoint="TOPRIGHT">
						<Offset>
							<AbsDimension x="7" y="6"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Button>
			<Button name="CDG_ROLL_Button" inherits="OptionsButtonTemplate" movable="true" text="ROLL!">
				<Anchors>
					<Anchor point="BOTTOM">
						<Offset x="-105" y="35" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						CDG_OnClickROLL();
					</OnClick>
				</Scripts>
			</Button>

			<Button name="CDG_STATS_Button" inherits="OptionsButtonTemplate" movable="true" text="Stats">
				<Anchors>
					<Anchor point="BOTTOM">
						<Offset x="105" y="35" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						CDG_OnClickSTATS();
					</OnClick>
				<OnLoad>CDG_STATS_Button.tooltipText="Show's all user stats."</OnLoad>
				</Scripts>
			</Button>
			<EditBox name="CDG_EditBox" letters="6">
				<Size>
					<AbsDimension x="100" y="30" />
				</Size>
				<Anchors>
					<Anchor point="TOP">
						<Offset x="2" y="-81" />
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture name="Texture2" file="Interface\ChatFrame\UI-ChatInputBorder-Right">
							<Size>
								<AbsDimension x="75" y="32" />
							</Size>
							<Anchors>
								<Anchor point="RIGHT">
									<Offset x="9" />
								</Anchor>
							</Anchors>
							<TexCoords left="0.7" right="1" top="0" bottom="1" />
						</Texture>
						<Texture name="Texture1" file="Interface\ChatFrame\UI-ChatInputBorder-Left">
							<Size>
								<AbsDimension x="75" y="32" />
							</Size>
							<Anchors>
								<Anchor point="LEFT">
									<Offset x="-14" />
								</Anchor>
							</Anchors>
							<TexCoords left="0" right="0.2" top="0" bottom="1" />
						</Texture>
					</Layer>
				</Layers>
				<Scripts>
          <OnLoad>
            CDG_EditBox_OnLoad();
          </OnLoad>
					<OnEscapePressed>
						self:ClearFocus();
					</OnEscapePressed>
				</Scripts>
				<FontString inherits="ChatFontNormal" />
			</EditBox>
			<Button name="CDG_RESET_Button" inherits="OptionsButtonTemplate" movable="true" text="Reset Stats">
				<Anchors>
					<Anchor point="BOTTOM">
						<Offset x="105" y="15" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						CDG_ResetStats()
					</OnClick>
				<OnLoad>CDG_RESET_Button.tooltipText="Resets all Stats"</OnLoad>
				</Scripts>
			</Button>
			<Button name="CDG_RESET1_Button" inherits="OptionsButtonTemplate" movable="true" text="Reset Game">
				<Anchors>
				<Anchor point="BOTTOM">
						<Offset x="3" y="20" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						CDG_Reset()
						CDG_ResetCmd()
					</OnClick>
				<OnLoad>CDG_RESET1_Button.tooltipText="Resets The Game"</OnLoad>
				</Scripts>
			</Button>
			<Button name="CDG_LASTCALL_Button" inherits="OptionsButtonTemplate" movable="true" text="Last Call">
				<Anchors>
					<Anchor point="BOTTOM">
						<Offset x="-105" y="55" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						CDG_OnClickLASTCALL();
					</OnClick>
				</Scripts>
			</Button>
			<Button name="CDG_AcceptOnes_Button" inherits="OptionsButtonTemplate" text="Open Entry">
				<Anchors>
					<Anchor point="BOTTOM">
						<Offset x="-105" y="75" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						CDG_OnClickACCEPTONES();

					</OnClick>
				</Scripts>
			</Button>
			<Button name="CDG_Roll_Button" inherits="OptionsButtonTemplate" text="User Roll">
				<Anchors>
					<Anchor point="BOTTOM">
						<Offset x="105" y="75" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						CDG_OnClickRoll();

					</OnClick>
				<OnLoad>CDG_Roll_Button.tooltipText="Does /roll for you!"</OnLoad>
				</Scripts>
			</Button>
			
			<Button name="CDG_Ban_Button" inherits="OptionsButtonTemplate" text="Ban List">
				<Anchors>
					<Anchor point="BOTTOM">
						<Offset x="-105" y="15" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						CDG_ListBan();

					</OnClick>
				<OnLoad>CDG_Ban_Button.tooltipText="Ban list, to add people here type /cg ban (name)"</OnLoad>
				
				</Scripts>
			</Button>
			
			<Button name="CDG_Type_Button" inherits="OptionsButtonTemplate" text="Enters For You">
				<Anchors>
					<Anchor point="BOTTOM">
						<Offset x="105" y="55" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						CDG_OnClickRoll1();

					</OnClick>
					<OnLoad>CDG_Type_Button.tooltipText="Type's the number one into chat"</OnLoad>
				</Scripts>
			</Button>
			<Button name="CDG_CHAT_Button" inherits="OptionsButtonTemplate" text="(Raid)">
				<Anchors>
					<Anchor point="TOP">
						<Offset x="1" y="-60" />
					</Anchor>
				</Anchors>
			</Button>

		</Frame>
	
</Ui>
			<EdgeSize>
				<AbsValue val="32" />
			</EdgeSize>
		</Backdrop>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="Cross Gambling" inherits="GameFontNormal" text="CrossFire Gambling">
